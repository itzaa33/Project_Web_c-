


@model IEnumerable<User>;

<nav class="navbar navbar-expand-lg navbar-light bg-light">

    <div class="collapse navbar-collapse" id="navbarSupportedContent">

        <ul class="navbar-nav mr-auto">

           <form asp-controller="Personnel" asp-action="Search_user" method="get">
               <select name="Search_type" id="Search_type" form="carform">
                   <option value="email">E-Mail</option>
                   <option value="name">Name</option>
               </select>

               <input class="form-control mr-sm-2" type="search" id="Search" name="Search" placeholder="Search" aria-label="Search">

               <button class="btn btn-primary">Search</button>
           </form> 
           

        </ul>

    </div>

</nav>

<table class="table">
    <thead>
        <tr>
            <th>
                E-mail
            </th>
            <th>
                Name
            </th>
            <th>
                Phone Number
            </th>
            <th>
                State
            </th>
            <th>
                Money
            </th>
            <th>
                Status
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @if (Model.Count() != 0)
            {

                @foreach (var col in Model)
                {

                    <th>
                        @col.email
                    </th>

                    <th>
                        @col.name
                    </th>

                    <th>
                        @col.phone_number
                    </th>

                    <th>
                        @col.state

                    </th>

                    <th>
                        @col.money
                    </th>

                    <th>

                        @if (col.status_ban == 1)
                        {
                            <p>ติดโทษ</p>
                        }
                        else
                        {
                            <p>ปกติ</p>

                        }

                    </th>

                    <th>
                        @if (col.state != "Admin")
                        { 
                            @if (col.status_ban == 0)
                            {

                                @if (Context.Session.GetString("Userstate") == "Admin")
                                {

                                    <button class="btn btn-primary" id="statemodel" name="statemodel" onclick="location.href='@Url.Action("Chang_state", "Personnel", new {id = col.id})'">เลือกระดับ</button>
                                }


                                @if (Context.Session.GetString("Userstate") != "Driver")
                                {

                                    <button class="btn btn-warning" id="moneymodel" name="moneymodel" onclick="location.href='@Url.Action("Add_moneyView", "Ticket_personnel", new {id = col.id})'">เติมเงิน</button>
                                }


                          
                                <button class="=btn btn-danger" id="banmodel" name="banmodel"  onclick="ban(@col.id)" >แบน</button>

                            }
                            else
                            {
                                <button class="btn btn-success" id="unbanmodel" name="unbanmodel" onclick="unban(@col.id)">ปลดแบน</button>

                            }

                        }

                    </th>

                }


            }
            else
            {

                <p>ไม่พบข้อมูล</p>
            }
        </tr>
    </tbody>
</table>

<div class="modal fade" id="ban" role="dialog">
    <div class="modal-dialog">

        <form asp-controller="Personnel" asp-action="Chang_ban" method="post">

            <input type="hidden" id="parse_value_ban" name="parse_value" />
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">บล็อกผู้ใช้งาน</h4>
                </div>
                <div class="modal-body">
                    <div>
                        <label>Email : </label>
                        <output id="emailmodel" value=""></output>
                    </div>
                    <div>
                        <label>Name : </label>
                        <output id="namemodel" value=""></output>
                    </div>
                    <select name="explanation" id="explanation" form="carform">
                        <option >ไม่มาขึ้นรถในเวลาที่กำหนด</option>
                        <option >ก่อนกวนพนักงาน</option>
                    </select>
                </div>
                <div class="modal-footer">
                    <button type="submit" name="submit" id="submit" class="btn btn-default" data-dismiss="modal" value="1">OK</button>
                </div>
            </div>
        </form>

    </div>
</div>

<div class="modal fade" id="unban" role="dialog">
    <div class="modal-dialog">

        <form asp-controller="Personnel" asp-action="Chang_ban" method="post">

            <input type="hidden" id="parse_value_unban" name="parse_value" />
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">ปลดบล็อกผู้ใช้งาน</h4>
                </div>
                <div class="modal-body">
                    
                    <div >
                        <label>Email : </label>
                        <output id="emailmodel" value=""></output>
                    </div>
                    <div>
                        <label>Name : </label>
                        <output id="namemodel" value=""></output>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" id="submit" name="submit" class="btn btn-default" data-dismiss="modal" value="0">OK</button>
                </div>
            </div>
        </form>

    </div>
</div>


<script>

    function ban(id)
    {

        $('#parse_value_ban').val() = id; 

        $.ajax({
            type: "get",
            url: "/Personnel/get_profile",
            data: { id: id },
            success: function (data)
            {
                $('#emailmodel').val() = data.email;

                $('#namemodel').val() = data.email;

            });

            $('#ban').modal('show');


    }

    function unban(id)
    {


        $('#parse_value_unban').val() = id;

        $.ajax({
            type: "get",
            url: "/Personnel/get_profile",
            data: { id: id },
            success: function (data) {
                $('#emailmodel').val() = data.email;

                $('#namemodel').val() = data.email;

            });

        $('#unban').modal('show');


    }

</script>






