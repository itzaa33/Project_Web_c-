@model User
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>



<body class="con" >
    <div class="row">
        <div class="col-md-5">
            <form asp-controller="Account" asp-action="Register" method="post">
                <h4>Create a new account.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label style="color:#ffffff"  asp-for="email">Email</label>
                    <input asp-for="email" id="email" name="email" class="form-control" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="color:#ffffff"  asp-for="name">Name</label>
                    <input  asp-for="name" id="name" name="name" class="form-control" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="color:#ffffff"  asp-for="phone_number">Phone Number</label>
                    <input asp-for="phone_number" id="phone_number" name="phone_number" class="form-control" />
                    <span asp-validation-for="phone_number" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="color:#ffffff"  asp-for="password">Password</label>
                    <input asp-for="password" id="password" name="password" class="form-control" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="color:#ffffff"  asp-for="ConfirmPassword">ConfirmPassword</label>
                    <input asp-for="ConfirmPassword" id="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-default">Register</button>
            </form>
        </div>
    </div>


</body>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
